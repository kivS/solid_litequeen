<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 flex gap-1 items-center justify-center">
        <%= link_to database_path(params[:database_id])  do %>
            <%= image_tag "solid_litequeen/icons/database.svg", class: "size-6" %>
        <% end %>

        <%= image_tag "solid_litequeen/icons/chevron-right.svg", class: "size-6" %>

        <span>
            <%= @table_name %>
        </span>
    </h1>

    <div class="mb-6">
        <p class="text-gray-600"><%= pluralize(@row_count, "row") %> found</p>
    </div>

    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="min-w-full inline-block align-middle">
            <table class="min-w-full relative">
                <thead class="">
                    <tr class="bg-gray-100 border-b border-gray-200">
                        <% @data.columns.each do |column| %>
                            <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 whitespace-nowrap"><%= column %></th>
                        <% end %>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% @data.rows.each do |row| %>
                        <tr class="hover:bg-gray-50">
                            <% row.each do |item| %>
                                <% truncated_item =  item&.truncate(80) %>
                                <td class="px-6 py-4 text-sm text-gray-800 whitespace-nowrap" >

                                    <div class="flex justify-between">

                                        <span><%= truncated_item %></span>

                                        <% if truncated_item&.to_s&.ends_with?("...") %>
                                            <span title="<%= item %>" class="cursor-pointer size-4">
                                                <%= image_tag "solid_litequeen/icons/info.svg", class: "size-4" %>
                                            </span>
                                        <% end %>
                                    </div>
                                </td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>